<h2>Bill for <%= @bill.customer.first_name %> <%= @bill.customer.last_name %></h2>
<table id="bill">
  <thead>
    <tr>
      <th>Menu Item</th><th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @bill.items.each do |item| %>
    <tr class="final_bill">
      <td class="item_name"><%= item.item_description %></td>
      <td class="item_price"><%= item.price %></td>
      <td class="merch_id hidden"><%= item.merchant_id %></td>
      <td class="item_id hidden"><%= item.id %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td>Total Bill:</td>
      <td id="bill_total">$<%= @bill.total / 100.00 %></td>
  </tfoot>
</table>

<p><%= link_to 'Back', merchant_seatings_path(@bill.merchant.id) %></p>
