<%= form_for @merchant, url: merchant_path(@merchant), method: :put do |f| %>
  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :business_name %>
  <%= f.text_field :business_name, value: @merchant.business_name %>

  <%= f.label :email %>
  <%= f.text_field :email, value: @merchant.email %>

  <%= f.label :financial_info %>
  <%= f.text_field :financial_info, value: @merchant.financial_info %>

  <%= f.label :tax %>
  <%= f.text_field :tax, value: @merchant.tax %>

  <%= f.submit "Update Profile" %>
<% end %>
